# Example environment configuration for TipJar

# Database connection
DATABASE_URL="postgresql://user:password@localhost:5432/tipjar"

# Mailer settings
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=tipjar@example.com
MAIL_PASS=changeme
MAIL_FROM_NAME=TipJar
MAIL_FROM_ADDRESS=noreply@tipjar.example.com
MAIL_SECURE=false

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_PORT=3001

# Circle API configuration
CIRCLE_API_KEY=your-circle-api-key
CIRCLE_ENTITY_SECRET=your-entity-secret
CIRCLE_WALLET_SET_ID=your-wallet-set-id
DEFAULT_BLOCKCHAIN=MATIC-AMOY

# JWT secrets
JWT_ACCESS_TOKEN_SECRET=access-secret
JWT_REFRESH_TOKEN_SECRET=refresh-secret

# Redis
REDIS_URL=redis://localhost:6379

# Allow resending verification email if already verified
ALLOW_RESEND_VERIFICATION_FOR_VERIFIED=false
