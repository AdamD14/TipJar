# Backend environment variables

# Database connection
DATABASE_URL=postgresql://USER:PASS@localhost:5432/tipjar

# Server configuration
BACKEND_PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
FRONTEND_URL_DOMAIN_FOR_SIWE=localhost
FRONTEND_LOGIN_FAILURE_REDIRECT_URL=/login?error=oauth_failed
FRONTEND_LOGIN_SUCCESS_REDIRECT_URL=/dashboard

# JWT configuration
JWT_ACCESS_TOKEN_SECRET=change_me_access_secret
JWT_REFRESH_TOKEN_SECRET=change_me_refresh_secret
JWT_ACCESS_TOKEN_EXPIRATION_TIME=15m
JWT_REFRESH_TOKEN_EXPIRATION_TIME=7d
JWT_ACCESS_TOKEN_EXPIRATION_SECONDS=900
JWT_REFRESH_TOKEN_EXPIRATION_SECONDS=604800

# Mailer configuration
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=example@example.com
MAIL_PASS=password
MAIL_FROM_NAME=TipJar
MAIL_FROM_ADDRESS=noreply@tipjar.example.com

# Redis connection
REDIS_URL=redis://localhost:6379

# Circle API
CIRCLE_API_KEY=your_circle_api_key
CIRCLE_ENTITY_SECRET=your_circle_entity_secret
CIRCLE_WALLET_SET_ID=wallet-set-id
DEFAULT_BLOCKCHAIN=MATIC-AMOY

# Generator API
GEMINI_API_KEY=your_gemini_api_key

# OAuth providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_CALLBACK_URL=http://localhost:3001/api/v1/auth/twitch/callback

# Misc
ALLOW_RESEND_VERIFICATION_FOR_VERIFIED=false
